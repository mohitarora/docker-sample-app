{
    "variables": {
        "version": "",
        "jdk7-base-image-version": "",
        "app_destination":"",
        "app_binary_url":"",
        "app_conf_url":""    
    },
    "builders":[{
        "type": "docker",
        "image": "mohitarora/jdk7-base:{{user `jdk7-base-image-version`}}",
        "pull": true,
        "export_path": "sample-app-{{user `version`}}.tar"
    }],
    "provisioners":[
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/local.yml",
            "role_paths":[
                "roles/sample-app"
            ],
            "extra_arguments":[
                "app_destination={{user `app_destination`}}",
                "app_binary_url={{user `app_binary_url`}}",
                "app_conf_url={{user `app_conf_url`}}"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "mohitarora/sample-app",
            "tag": "{{user `version`}}"
        }
    ]
}